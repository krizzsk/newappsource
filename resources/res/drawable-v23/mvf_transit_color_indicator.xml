<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:gravity="bottom|left|right|center_vertical|center_horizontal|fill_horizontal|center" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <padding android:left="4dp" android:top="3dp" android:right="4dp" android:bottom="3dp"/>
            <corners android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp"/>
            <solid android:color="@color/white"/>
            <size android:height="3dp"/>
        </shape>
    </item>
</layer-list>
