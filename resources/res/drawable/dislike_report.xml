<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?attr/colorCritical"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>
            <item android:gravity="center" android:drawable="@drawable/ic_close_6_on_status"/>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?attr/colorOnSurfaceEmphasisLow"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>
            <item android:gravity="center" android:drawable="@drawable/ic_close_6_on_status"/>
        </layer-list>
    </item>
</selector>
