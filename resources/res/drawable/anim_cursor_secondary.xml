<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:duration="500">
        <inset android:insetLeft="2dp" android:insetRight="2dp" android:insetTop="2dp" android:insetBottom="2dp">
            <shape android:shape="rectangle">
                <size android:height="2dp" android:width="2dp"/>
                <solid android:color="?attr/colorSecondary"/>
            </shape>
        </inset>
    </item>
    <item android:duration="500">
        <inset android:insetLeft="2dp" android:insetRight="2dp" android:insetTop="2dp" android:insetBottom="2dp">
            <shape android:shape="rectangle">
                <size android:height="2dp" android:width="2dp"/>
                <solid android:color="@color/transparent"/>
            </shape>
        </inset>
    </item>
</animation-list>
