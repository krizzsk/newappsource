<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools&gt;" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:paddingTop="40dp" android:paddingBottom="18dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:id="@+id/title" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" style="?attr/dialogTitleStyle"/>
    <ScrollView android:id="@+id/message_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/message" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginTop="24dp" android:layout_marginRight="24dp" style="?attr/dialogMessageStyle"/>
    </ScrollView>
    <FrameLayout android:id="@+id/content" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <Space android:id="@+id/buttons_space" android:layout_width="match_parent" android:layout_height="6dp"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/buttons" android:paddingTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/positive_button" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" style="?attr/dialogPositiveButtonStyle"/>
        <Button android:id="@+id/negative_button" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" style="?attr/dialogNegativeButtonStyle"/>
        <Button android:id="@+id/neutral_button" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" style="?attr/dialogNeutralButtonStyle"/>
    </LinearLayout>
</LinearLayout>
