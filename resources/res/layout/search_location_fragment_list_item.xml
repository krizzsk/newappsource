<?xml version="1.0" encoding="utf-8"?>
<com.moovit.design.view.list.ListItemLayout xmlns:tools="http://schemas.android.com/tools&gt;" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" style="?attr/searchLineListItemStyle">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:tag="icon" android:layout_width="wrap_content" android:layout_height="match_parent" android:minWidth="48dp">
        <ImageView android:id="@+id/image" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textAppearance="?attr/textAppearanceFootnote" android:textColor="?attr/colorPrimary" android:id="@+id/distance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:maxLines="1" style="?attr/textViewCenteredStyle"/>
    </LinearLayout>
    <TextView android:textAppearance="?attr/textAppearanceBodyStrong" android:textColor="?attr/colorOnSurface" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2"/>
    <com.moovit.design.view.ImagesOrTextsView android:textAppearance="?attr/textAppearanceCaption" android:textColor="?attr/colorOnSurfaceEmphasisHigh" android:id="@+id/subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2"/>
    <ImageView android:id="@+id/accessory" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="fitCenter" style="@style/Widget.Moovit.ListItem.Accessory.Icon"/>
</com.moovit.design.view.list.ListItemLayout>
