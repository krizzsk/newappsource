<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="-1dp" android:layout_marginRight="-1dp" android:scaleType="fitCenter" android:adjustViewBounds="true" app:srcCompat="@drawable/img_bg_connect"/>
        <com.moovit.design.view.list.ListItemView android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" style="?attr/listItemSectionHeaderLargeStyle"/>
        <TextView android:textAppearance="?attr/textAppearanceBodySmall" android:textColor="?attr/colorOnSurfaceEmphasisHigh" android:id="@+id/message" android:paddingLeft="@dimen/screen_edge" android:paddingRight="@dimen/screen_edge" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="28dp"/>
        <fragment android:name="com.moovit.app.useraccount.providers.MultipleChoiceConnectProviderFragment" android:id="@+id/connect_provider_fragment" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/screen_edge" android:layout_marginRight="@dimen/screen_edge"/>
        <Space android:layout_width="match_parent" android:layout_height="0dp" android:minHeight="18dp" android:layout_weight="1"/>
    </LinearLayout>
</ScrollView>
