<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools&gt;" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RadioGroup android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/from_to_radio_group" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="24dp">
        <RadioButton android:textAppearance="?attr/textAppearanceBodySmallStrong" android:textColor="@color/text_checked_selector" android:gravity="center" android:id="@+id/from_radio_button" android:background="@drawable/carpool_ride_request_time_picker_selector" android:layout_width="100dp" android:layout_height="48dp" android:checked="true" android:button="@null"/>
        <TextView android:gravity="center" android:id="@+id/from_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="@string/carpool_to_lowercase"/>
        <RadioButton android:textAppearance="?attr/textAppearanceBodySmallStrong" android:textColor="@color/text_checked_selector" android:gravity="center" android:id="@+id/to_radio_button" android:background="@drawable/carpool_ride_request_time_picker_selector" android:layout_width="100dp" android:layout_height="48dp" android:button="@null"/>
    </RadioGroup>
    <ImageView style="?attr/dividerHorizontalFullStyle"/>
    <TimePicker android:layout_gravity="center_horizontal" android:id="@+id/time_picker" android:layout_width="wrap_content" android:layout_height="wrap_content" android:numbersTextColor="?attr/colorOnSurface" android:timePickerMode="spinner"/>
    <Button android:id="@+id/ok" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:text="@string/action_ok" style="?attr/dialogPositiveButtonStyle"/>
    <Button android:id="@+id/cancel" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:layout_marginBottom="18dp" android:text="@string/action_cancel" style="?attr/dialogNegativeButtonStyle"/>
</LinearLayout>
