<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView android:id="@+id/scroller" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:paddingBottom="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:animateLayoutChanges="true">
            <include layout="@layout/carpool_ride_details_view_header"/>
            <TextView android:textAppearance="?attr/textAppearanceCaption" android:textColor="?attr/colorOnStatus" android:id="@+id/alert" android:paddingLeft="@dimen/screen_edge" android:paddingTop="5dp" android:paddingRight="@dimen/screen_edge" android:paddingBottom="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="40dp" style="?attr/textViewCenteredStyle"/>
            <com.moovit.app.carpool.CarpoolRideJourneyView android:id="@+id/ride_journey" android:paddingLeft="@dimen/screen_edge" android:paddingTop="24dp" android:paddingRight="@dimen/screen_edge" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <Button android:textAppearance="?attr/textAppearanceFootnote" android:textColor="?attr/colorPrimary" android:id="@+id/view_ride_on_map" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="@string/carpool_view_location_on_map_activity" android:layout_marginStart="26dp" style="?attr/borderlessButtonStyle"/>
            <com.moovit.app.carpool.CarpoolRideDetourView android:id="@+id/detour" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:layout_marginBottom="24dp" app:autoToggle="true" app:checked="true"/>
            <View android:background="@drawable/divider_horizontal_full" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <com.moovit.design.view.list.ListItemView android:id="@+id/section_header" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp" app:title="@string/carpool_ride_details_driver_profile_about_me" app:titleTextAppearance="?attr/textAppearanceFootnote" app:titleTextColor="?attr/colorOnSurfaceEmphasisMedium" style="?attr/listItemSectionHeaderStyle"/>
            <com.moovit.app.carpool.driver.CarpoolDriverView android:id="@+id/driver" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/screen_edge" android:layout_marginRight="@dimen/screen_edge"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/dock_container" android:background="?attr/colorSurface" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp">
        <ImageView android:id="@+id/dock_shadow" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" style="?attr/dividerHorizontalFullStyle"/>
        <TextView android:textAppearance="?attr/textAppearanceBodySmallStrong" android:textColor="?attr/colorOnSurface" android:id="@+id/picked_up_label" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/screen_edge" android:layout_marginTop="16dp" android:layout_marginRight="@dimen/screen_edge" android:text="@string/carpool_driver_report_ride_status_label" style="?attr/textViewCenteredStyle"/>
        <Button android:id="@+id/picked_up_action" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/screen_edge" android:layout_marginTop="10dp" android:layout_marginRight="@dimen/screen_edge" android:text="@string/carpool_driver_confirm_ride_button"/>
        <Button android:id="@+id/ride_action" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/screen_edge" android:layout_marginRight="@dimen/screen_edge"/>
        <TextView android:textAppearance="?attr/textAppearanceBodySmall" android:textColor="?attr/colorOnSurface" android:textColorHighlight="@color/transparent" android:id="@+id/bookingSurvey" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/screen_edge" android:layout_marginTop="10dp" android:layout_marginRight="@dimen/screen_edge" android:layout_marginBottom="16dp" style="?attr/textViewCenteredStyle"/>
    </LinearLayout>
</LinearLayout>
