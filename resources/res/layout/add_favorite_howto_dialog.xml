<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="@null">
    <FrameLayout android:id="@+id/content" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/buttons" android:paddingLeft="@dimen/screen_edge" android:paddingRight="@dimen/screen_edge" android:paddingBottom="@dimen/screen_edge" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/positive_button" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <Button android:id="@+id/negative_button" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <Button android:id="@+id/neutral_button" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <Space android:visibility="invisible" android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
        <Button android:id="@+id/extra_button" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
