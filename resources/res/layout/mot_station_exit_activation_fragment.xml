<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:tools="http://schemas.android.com/tools&gt;" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/activation_details" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="0dp" android:fillViewport="true" app:layout_constraintBottom_toBottomOf="@+id/shadow" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0">
            <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <Space android:layout_width="match_parent" android:layout_height="0dp" android:minHeight="25dp" android:layout_weight="1"/>
                <ImageView android:layout_gravity="center" android:id="@+id/agency_image" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textAppearance="?attr/textAppearanceBody" android:textColor="?attr/colorOnSurface" android:layout_gravity="center" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/screen_edge" android:layout_marginTop="12dp" android:layout_marginRight="@dimen/screen_edge" android:text="@string/payment_mot_exit_exit_station" style="?attr/textViewCenteredStyle"/>
                <TextView android:textAppearance="?attr/textAppearanceHeadline4" android:textColor="?attr/colorOnSurface" android:layout_gravity="center" android:id="@+id/station_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/screen_edge" android:layout_marginRight="@dimen/screen_edge" style="?attr/textViewCenteredStyle"/>
                <Space android:layout_width="match_parent" android:layout_height="0dp" android:minHeight="25dp" android:layout_weight="1"/>
                <TextView android:layout_gravity="center" android:id="@+id/price_explanation" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/screen_edge" android:layout_marginRight="@dimen/screen_edge" android:text="@string/payment_mot_exit_fare" style="?attr/textViewCenteredStyle"/>
                <include android:layout_gravity="center" android:id="@+id/passenger_ticket_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/screen_edge" android:layout_marginTop="8dp" android:layout_marginRight="@dimen/screen_edge" layout="@layout/mot_ticket_passenger_view"/>
                <include android:layout_gravity="center" android:id="@+id/additional_passenger_ticket_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/screen_edge" android:layout_marginTop="8dp" android:layout_marginRight="@dimen/screen_edge" layout="@layout/mot_ticket_additional_passenger_view"/>
                <Space android:layout_width="wrap_content" android:layout_height="16dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <ImageView android:id="@+id/shadow" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintBottom_toTopOf="@+id/total_price_sum" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:srcCompat="@drawable/shadow_top_4"/>
        <com.moovit.design.view.list.ListItemView android:id="@+id/total_price_sum" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintBottom_toTopOf="@+id/divider" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:title="@string/payment_mot_passenger_price" style="?attr/listItemMenuStyle">
            <com.moovit.view.PriceView android:tag="accessory" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fullPriceTextAppearance="?attr/textAppearanceCaption" app:fullPriceTextColor="?attr/colorOnSurfaceEmphasisMedium" app:priceTextAppearance="?attr/textAppearanceBodyStrong" app:priceTextColor="?attr/colorOnSurface"/>
        </com.moovit.design.view.list.ListItemView>
        <ImageView android:id="@+id/divider" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:importantForAccessibility="no" app:layout_constraintBottom_toTopOf="@+id/finish_ride_view" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" style="?attr/dividerHorizontalStyle"/>
        <Button android:id="@+id/finish_ride_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/screen_edge" android:layout_marginRight="@dimen/screen_edge" android:text="@string/payment_mot_exit_code_action" app:layout_constraintBottom_toTopOf="@+id/cancel_view" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0"/>
        <Button android:id="@+id/cancel_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/screen_edge" android:layout_marginRight="@dimen/screen_edge" android:layout_marginBottom="@dimen/half_screen_edge" android:text="@string/cancel" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" style="?attr/borderlessButtonStyle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include android:id="@+id/error_view" android:visibility="gone" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0" layout="@layout/mot_station_error_activity"/>
</FrameLayout>
