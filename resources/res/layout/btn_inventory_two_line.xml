<?xml version="1.0" encoding="utf-8"?>
<com.usebutton.sdk.internal.views.TwoLineInventoryView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/btn_background_white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:focusable="false" android:clickable="false" android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="@dimen/btn_promo_card_padding">
        <LinearLayout android:gravity="center_vertical" android:layout_gravity="left|center_vertical|center_horizontal|center" android:orientation="vertical" android:focusable="false" android:clickable="false" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/inventory_primary" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginBottom="3dp" android:minWidth="120dp" android:lines="1" android:layout_weight="1" style="@style/BtnCardText.btn_charcoal.Small"/>
            <TextView android:ellipsize="end" android:id="@+id/inventory_secondary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="60dp" android:lines="1" android:layout_weight="1" style="@style/BtnCardText.Dark.Small.Light"/>
        </LinearLayout>
