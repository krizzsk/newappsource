            <com.usebutton.sdk.internal.views.AssetImageView android:gravity="right" android:id="@+id/inventory_icon" android:layout_width="40dp" android:layout_height="30dp" android:scaleType="fitEnd"/>
            <TextView android:ellipsize="end" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/inventory_icon_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:minWidth="60dp" android:lines="1" style="@style/BtnCardText.Dark.Small.Light"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/btn_grey_light" android:layout_width="match_parent" android:layout_height="1dp"/>
</com.usebutton.sdk.internal.views.TwoLineInventoryView>
