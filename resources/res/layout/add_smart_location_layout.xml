<?xml version="1.0" encoding="utf-8"?>
<ViewAnimator xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/root" android:layout_width="match_parent" android:layout_height="match_parent" android:measureAllChildren="true" android:animateLayoutChanges="true">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:layout_marginBottom="24dp" android:scaleType="centerInside" app:srcCompat="@drawable/img_favorite_added"/>
        <TextView android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:layout_marginBottom="24dp" android:text="@string/favorite_location_push_title" android:importantForAccessibility="no" style="?attr/dialogMessageStyle"/>
        <TextView android:id="@+id/subtitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:layout_marginBottom="24dp" android:text="@string/favorite_location_push_subtitle" android:importantForAccessibility="no" style="?attr/dialogMessageStyle"/>
        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:hint="@string/name_location_hint">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/location_name" android:tag="edit_text" android:layout_width="match_parent" android:layout_height="match_parent" android:imeOptions="actionDone"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.moovit.design.view.ImagesOrTextsView android:textAppearance="?attr/textAppearanceBody" android:textColor="?attr/colorOnSurface" android:ellipsize="end" android:id="@+id/location_description" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:layout_marginBottom="18dp" android:maxLines="1"/>
        <Button android:id="@+id/save_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:layout_marginBottom="18dp" android:text="@string/favorite_save_location_button"/>
    </LinearLayout>
    <include android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" layout="@layout/smart_favorite_added_layout"/>
</ViewAnimator>
