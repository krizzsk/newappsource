<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/tabs_container" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:gravity="center" android:id="@+id/tab_ticket_info" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/com_masabi_justride_sdk_ticket_info_tab_info" android:layout_weight="1" android:textAllCaps="false" style="?android:attr/buttonBarButtonStyle"/>
        <Button android:gravity="center" android:id="@+id/tab_ticket_regulations" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/com_masabi_justride_sdk_ticket_info_tab_regulations" android:layout_weight="1" android:textAllCaps="false" style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/content_container_ticket_info" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ScrollView android:id="@+id/content_container_ticket_regulations" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:id="@+id/ticket_regulations_text_view" android:paddingTop="@dimen/com_masabi_justride_sdk_activity_vertical_margin" android:paddingBottom="@dimen/com_masabi_justride_sdk_activity_vertical_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/com_masabi_justride_sdk_activity_horizontal_margin" android:paddingEnd="@dimen/com_masabi_justride_sdk_activity_horizontal_margin"/>
    </ScrollView>
</LinearLayout>
