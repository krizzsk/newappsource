<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="@dimen/elevation_5" android:valueType="floatType" android:propertyName="elevation"/>
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="1.3" android:valueType="floatType" android:propertyName="scaleX"/>
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="1.3" android:valueType="floatType" android:propertyName="scaleY"/>
        </set>
    </item>
    <item android:state_activated="true">
        <set>
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="@dimen/elevation_5" android:valueType="floatType" android:propertyName="elevation"/>
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="1.3" android:valueType="floatType" android:propertyName="scaleX"/>
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="1.3" android:valueType="floatType" android:propertyName="scaleY"/>
        </set>
    </item>
    <item>
        <set>
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="@dimen/elevation_3" android:valueType="floatType" android:propertyName="elevation"/>
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="1" android:valueType="floatType" android:propertyName="scaleX"/>
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="1" android:valueType="floatType" android:propertyName="scaleY"/>
        </set>
    </item>
</selector>
